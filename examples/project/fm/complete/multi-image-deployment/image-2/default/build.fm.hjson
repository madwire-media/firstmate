{
    kind: step/container
    description: compiles the source code

    profiles: {
        default: {
            steps: {
                build-image: ./build-image
            }

            source: ${steps.build-image.image}

            volumes: {
                // ~ refers to the project root
                /mnt/code: ~/source/compiled-image-example
                // . refers to the directory of this file
                /mnt/output: ./image/artifacts
            }
        }
    }
}
