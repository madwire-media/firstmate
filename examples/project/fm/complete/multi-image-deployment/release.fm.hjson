{
    kind: step/helm-release
    description: run the example helm chart

    profiles: {
        *: {
            requiredParams: [
                image-1
                image-2
            ]
            steps: {
                chart: ./chart
            }

            source: ${steps.chart.chart}

            values: {
                images: {
                    image1: ${params.image-1}
                    image2: ${params.image-2}
                }

                proxyId: ${params.proxyId}
            }
        }
    }
}
