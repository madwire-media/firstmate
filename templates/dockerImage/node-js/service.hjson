{
    type: dockerImage

    branches: {
        ~default: {
            version: 0.1.0

            imageName: '[[service]]'

            // Copy the package.json files and source code over
            copyFiles: {
                '[[source]]/package.json': package.json
                '[[source]]/package-lock.json': package-lock.json
                '[[source]]/src': src
            }

            dev: {
                // Tell NPM to install dev packages
                dockerArgs: {
                    NODE_ENV: development
                }
            }
        }
    }
}
