{
    "name": "firstmate",
    "version": "0.2.0",
    "description": "Captain's right-hand-man for Kubernetes",
    "repository": {
        "type": "git",
        "url": "https://github.com/madwire-media/firstmate"
    },
    "author": "Dakota Sullivan",
    "license": "MIT",
    "bin": {
        "fm": "dist/main.js"
    },
    "scripts": {
        "bin": "node dist/main.js",
        "prepublishOnly": "npm run clean &&* npm run build-and-check-all",
        "build-and-check-all": "npm run build && npm run check-all",
        "build": "ttsc --project tsconfig-prod.json",
        "build-dev": "ttsc",
        "build-watch": "ttsc -w",
        "clean": "git clean -fX",
        "check-all": "npm run lint && npm run spell-check && npm run test-all",
        "spell-check": "cspell 'modules/**/*.ts'",
        "lint": "eslint --ext .js,.jsx,.ts,.tsx ./",
        "test-all": "npm run unit-test && npm run mutation-test",
        "unit-test": "nyc mocha modules/**/*.test.ts",
        "unit-test-mock-only": "nyc mocha modules/**/*.unit.test.ts",
        "unit-test-func-only": "nyc mocha modules/**/*.func.test.ts",
        "mutation-test": "stryker run"
    },
    "dependencies": {
        "@madwire-media/concurrently": "^0.1.0",
        "@madwire-media/defer": "^1.0.2",
        "@madwire-media/di-container": "^0.2.3",
        "@madwire-media/fs": "^0.3.3",
        "@madwire-media/fs-extra": "^0.1.6",
        "@madwire-media/fs-node": "^0.1.2",
        "@madwire-media/http": "^0.3.1",
        "@madwire-media/http-node": "^0.1.0",
        "@madwire-media/magic-object": "^0.1.0",
        "@madwire-media/os": "^0.1.1",
        "@madwire-media/pipe": "^1.0.1",
        "@madwire-media/process": "^0.3.1",
        "@madwire-media/process-node": "^0.1.0",
        "@madwire-media/result": "^1.0.6",
        "@madwire-media/result-try": "^0.1.3",
        "aggregate-error": "^3.0.1",
        "chalk": "^3.0.0",
        "commander": "^5.1.0",
        "fp-ts": "^2.5.3",
        "hjson": "^3.2.1",
        "io-ts": "^2.1.2",
        "nodegit": "^0.26.5",
        "source-map-support": "^0.5.19",
        "yaml": "^1.9.2"
    },
    "devDependencies": {
        "@madwire-media/expect": "^0.1.2",
        "@madwire-media/fs-in-memory": "^0.1.2",
        "@stryker-mutator/core": "^2.5.0",
        "@stryker-mutator/mocha-framework": "^2.5.0",
        "@stryker-mutator/mocha-runner": "^2.5.0",
        "@stryker-mutator/typescript": "^2.5.0",
        "@types/hjson": "^2.4.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.7.6",
        "@types/nodegit": "^0.26.2",
        "@typescript-eslint/eslint-plugin": "^2.21.0",
        "@typescript-eslint/parser": "^2.21.0",
        "cspell": "^4.0.55",
        "eslint": "^6.8.0",
        "eslint-config-airbnb-typescript": "^7.0.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-react": "^7.18.3",
        "eslint-plugin-react-hooks": "^1.7.0",
        "mocha": "^7.1.2",
        "nyc": "^15.0.0",
        "ts-node": "^8.6.2",
        "ttypescript": "^1.5.10",
        "typescript": "^3.8.2"
    }
}
