{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "outDir": "dist",

        "plugins": [
            {
                "transform": "@madwire-media/result-try/transform.js"
            }
        ]
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "**/*.d.ts",
        "dist",
        "node_modules"
    ]
}
